<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/nilaiPadding"
    android:gravity="center"
    android:background="#27AE60"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/namaApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AMAL HARIAN"
        android:textSize="50sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        />



    <Button
        android:id="@+id/catatanamalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catat Amalan Terbaru"
        android:background="@android:color/white"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#27AE60"
        android:onClick="catatAmalan"/>

    <Button
        android:id="@+id/raporamalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Rapor Amalan"
        android:background="@android:color/white"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="#27AE60"
        android:onClick="catatAmalan"/>

    <Button
        android:id="@+id/jadwalshalat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal Shalat"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:textColor="#27AE60"
        android:onClick="lihatJadwalShalat"
        />

</LinearLayout>